{
  "version": "0.1",
  "catalogue": "gebieden",
  "entity": "wijken",
  "source": {
    "name": "AMSBI",
    "application": "DIVA",
    "entity_id": "identificatie",
    "type": "oracle",
    "schema": "diva",
    "query": [
"    SELECT '0' || d.bce_id                                                          AS identificatie",
"    ,      dense_rank() OVER (partition BY d.bce_id ORDER BY d.ingangsdatum_cyclus) AS volgnummer",
"    ,      to_char(nvl(d.mutatiedatum, d.ontstaansdatum), 'YYYY-MM-DD HH24:MI:SS')  AS registratiedatum",
"    ,      d.naam                                                                   AS naam",
"    ,      d.volledige_code                                                         AS code",
"    ,      to_char(d.ingangsdatum_cyclus, 'YYYY-MM-DD')                             AS datum_begin_geldigheid",
"    ,      to_char(d.einddatum_cyclus, 'YYYY-MM-DD')                                AS datum_einde_geldigheid",
"    ,      to_char(d.documentdatum_mutatie, 'YYYY-MM-DD')                           AS documentdatum",
"    ,      d.documentnummer_mutatie                                                 AS documentnummer",
"    ,      nvl(d.mutatiedatum, d.ontstaansdatum)                                    AS registratiedatum",
"    ,      '0' || d.sdl_id                                                          AS ligt_in_stadsdeel",
"    ,      sdo_util.to_wktgeometry(g.geometrie)                                     AS geometrie",
"      FROM gegmag.gbd_buurtcombinatie_data d",
"      LEFT OUTER JOIN gegmag.gbd_buurtcombinatie_geometrie g ON d.id = g.bcc_id"
    ]
  },
  "gob_mapping": {
