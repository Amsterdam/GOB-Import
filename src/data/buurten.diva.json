{
  "version": "0.1",
  "catalogue": "gebieden",
  "entity": "buurten",
  "source": {
    "name": "AMSBI",
    "application": "DIVA",
    "entity_id": "identificatie",
    "type": "oracle",
    "schema": "diva",
    "query": [
      "    SELECT '0' || d.brt_id                                                          AS identificatie",
      "    ,      dense_rank() OVER (partition BY d.brt_id ORDER BY d.ingangsdatum_cyclus) AS volgnummer",
      "    ,      to_char(nvl(d.mutatiedatum, d.ontstaansdatum), 'YYYY-MM-DD HH24:MI:SS')  AS registratiedatum",
      "    ,      d.naam                                                                   AS naam",
      "    ,      d.volledige_code                                                         AS code",
      "    ,      to_char(d.ingangsdatum_cyclus, 'YYYY-MM-DD')                             AS datum_begin_geldigheid",
      "    ,      to_char(d.einddatum_cyclus, 'YYYY-MM-DD')                                AS datum_einde_geldigheid",
      "    ,      to_char(d.documentdatum_mutatie, 'YYYY-MM-DD')                           AS documentdatum",
      "    ,      d.documentnummer_mutatie                                                 AS documentnummer",
      "    ,      '0' || d.BCE_ID                                                          AS ligt_in_wijk",
      "    ,      to_char(d.einddatum_cyclus, 'YYYY-MM-DD HH24:MI:SS')                     AS expirationdate",
      "    ,      sdo_util.to_wktgeometry(g.geometrie)                                     AS geometrie",
      "    FROM   gegmag.gbd_buurt_data               d",
      "    LEFT OUTER JOIN gegmag.gbd_buurt_geometrie g ON d.id = g.btc_id"
    ]
  },
  "gob_mapping": {
    "identificatie": {
      "source_mapping": "identificatie"
    },
    "volgnummer": {
      "source_mapping": "volgnummer"
    },
    "registratiedatum": {
      "source_mapping": "registratiedatum",
      "format": "%Y-%m-%d %H:%M:%S"
    },
    "naam": {
      "source_mapping": "naam"
    },
    "code": {
      "source_mapping": "code"
    },
    "begin_geldigheid": {
      "source_mapping": "datum_begin_geldigheid"
    },
    "eind_geldigheid": {
      "source_mapping": "datum_einde_geldigheid"
    },
    "documentdatum": {
      "source_mapping": "documentdatum"
    },
    "documentnummer": {
      "source_mapping": "documentnummer"
    },
    "ligt_in_wijk": {
      "source_mapping": {
        "bronwaarde": "ligt_in_wijk"
      }
    },
    "_ligt_in_ggpgebied": {
      "source_mapping": {
        "bronwaarde": "=geometrie"
      }
    },
    "_ligt_in_ggwgebied": {
      "source_mapping": {
        "bronwaarde": "=geometrie"
      }
    },
    "cbs_code": {
